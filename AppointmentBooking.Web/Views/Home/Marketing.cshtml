@{
    ViewData["Title"] = "Welcome to Appointment Booking";
}

<!-- Hero Section -->
<div class="container py-5 text-center">
    <div class="row align-items-center">
        <div class="col-lg-6 text-lg-start text-center">
            <h1 class="display-4 fw-bold mb-3">Manage Appointments Effortlessly</h1>
            <p class="lead text-muted">
                Our platform helps you schedule, manage, and track appointments with ease —
                perfect for small businesses, salons, consultants, and more.
            </p>
            <div class="mt-4">
                <a class="btn btn-primary btn-lg me-2" asp-controller="Account" asp-action="Register">
                    Get Started
                </a>
                <a class="btn btn-outline-secondary btn-lg" asp-controller="Account" asp-action="Login">
                    Sign In
                </a>
            </div>
        </div>
        <div class="col-lg-6 mt-4 mt-lg-0">
            <img src="https://via.placeholder.com/600x400?text=Appointment+Dashboard"
                 class="img-fluid rounded shadow"
                 alt="Appointment Booking Dashboard" />
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="bg-light py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="p-4 rounded shadow-sm bg-white h-100">
                    <i class="bi bi-calendar-check display-4 text-primary mb-3"></i>
                    <h5>Easy Scheduling</h5>
                    <p class="text-muted">Set up appointments in seconds with our simple booking system.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="p-4 rounded shadow-sm bg-white h-100">
                    <i class="bi bi-people display-4 text-primary mb-3"></i>
                    <h5>Customer Management</h5>
                    <p class="text-muted">Keep track of clients and their booking history in one place.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="p-4 rounded shadow-sm bg-white h-100">
                    <i class="bi bi-phone display-4 text-primary mb-3"></i>
                    <h5>Mobile Friendly</h5>
                    <p class="text-muted">Access and manage your appointments from any device.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="container text-center py-5">
    <h2 class="fw-bold mb-3">Ready to simplify your booking process?</h2>
    <p class="text-muted mb-4">Sign up today and start managing your appointments like a pro.</p>
    <a class="btn btn-primary btn-lg" asp-controller="Account" asp-action="Register">Create Your Free Account</a>
</div>
