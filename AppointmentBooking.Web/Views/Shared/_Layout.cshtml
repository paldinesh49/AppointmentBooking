@using Microsoft.AspNetCore.Identity
@using AppointmentBooking.Infrastructure.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    string? userName = null;
    IList<string> userRoles = new List<string>();

    if (SignInManager.IsSignedIn(User))
    {
        var currentUser = await UserManager.GetUserAsync(User);
        if (currentUser != null)
        {
            userName = currentUser.UserName;
            userRoles = await UserManager.GetRolesAsync(currentUser);
        }
    }

    // Tenant-specific data (fallback for public view)
    string businessName = ViewBag.BusinessName ?? "Appointment Booking";
    string primaryColor = ViewBag.PrimaryColor ?? "#0d6efd";
    string secondaryColor = ViewBag.SecondaryColor ?? "#198754";
    string? logoUrl = ViewBag.LogoUrl;
}

<!DOCTYPE html>
<html lang="en">
<head>
    @await Html.PartialAsync("_TenantTheme")
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@businessName</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/AppointmentBooking.Web.styles.css" asp-append-version="true" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        .navbar-custom {
            background-color: @primaryColor;
        }

            .navbar-custom .nav-link, .navbar-custom .navbar-brand {
                color: white !important;
            }

            .navbar-custom .dropdown-menu {
                min-width: 200px;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-custom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    @if (!string.IsNullOrEmpty(logoUrl))
                    {
                        <img src="@logoUrl" alt="Logo" height="40" class="me-2" />
                    }
                    @businessName
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Left Navigation -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (SignInManager.IsSignedIn(User) &&
                                                (User.IsInRole("SuperAdmin") || User.IsInRole("TenantOwner") || User.IsInRole("Staff")))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Appointments" asp-action="Index">Appointments</a>
                            </li>
                        }
                    </ul>

                    <!-- Right Navigation -->
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>@userName
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li class="dropdown-header">Roles: @string.Join(", ", userRoles)</li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Manage">Profile</a></li>

                                    @* SuperAdmin Menu *@
                                    @if (User.IsInRole("SuperAdmin"))
                                    {
                                        <li><hr class="dropdown-divider" /></li>
                                        <li class="dropdown-header">Super Admin</li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="CreateTenant">Create Tenant</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="CreateRole">Manage Roles</a></li>
                                    }

                                    @* Tenant Owner Menu *@
                                    @if (User.IsInRole("TenantOwner"))
                                    {
                                        <li><hr class="dropdown-divider" /></li>
                                        <li class="dropdown-header">Tenant Owner</li>
                                        <li><a class="dropdown-item" asp-controller="Appointments" asp-action="UpdateStatus">Manage Users</a></li>
                                    }

                                    @* Staff / Customer Menu *@
                                    @if (User.IsInRole("Staff") || User.IsInRole("Customer"))
                                    {
                                        <li><hr class="dropdown-divider" /></li>
                                        <li><a class="dropdown-item" asp-controller="Appointments" asp-action="Create">My Appointments</a></li>
                                    }

                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Register</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        <div class="text-center mb-4">
            <h1 class="fw-bold" style="color:@secondaryColor">Welcome to @businessName</h1>
            <p class="lead">Book and manage your appointments with ease.</p>
        </div>
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-4 py-3">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - @businessName -
            <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
