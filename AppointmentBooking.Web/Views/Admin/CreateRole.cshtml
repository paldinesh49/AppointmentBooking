@model AppointmentBooking.Web.ViewModel.CreateRoleViewModel
@{
    ViewData["Title"] = "Create Role";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-xl-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-success text-white rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-shield-plus me-2"></i>Create New Role</h4>
                </div>
                <div class="card-body p-4">

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="CreateRole" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="RoleName" class="form-label fw-semibold"></label>
                            <input asp-for="RoleName" class="form-control" placeholder="Enter role name" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Create Role
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-controller="Admin" asp-action="AssignRole" class="text-decoration-none">
                    <i class="bi bi-person-badge"></i> Assign Roles to Users
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
